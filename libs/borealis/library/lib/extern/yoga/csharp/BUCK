load("//tools/build_defs:fb_native_wrapper.bzl", "fb_native")
load(
    "//tools/build_defs/oss:yoga_defs.bzl",
    "BASE_COMPILER_FLAGS",
    "yoga_apple_binary",
    "yoga_cxx_library",
    "yoga_dep",
)

COMPILER_FLAGS = BASE_COMPILER_FLAGS + ["-std=c++11"]

fb_native.csharp_library(
    name = "yogalibnet46",
    srcs = glob(["**/*.cs"]),
    dll_name = "Facebook.Yoga.dll",
    framework_ver = "net46",
)

fb_native.csharp_library(
    name = "yogalibnet45",
    srcs = glob(["**/*.cs"]),
    dll_name = "Facebook.Yoga.dll",
    framework_ver = "net45",
)

yoga_cxx_library(
    name = "yoganet",
    srcs = ["Yoga/YGInterop.cpp"],
    compiler_flags = COMPILER_FLAGS,
    link_style = "static",
    link_whole = True,
    soname = "libyoga.$(ext)",
    visibility = ["PUBLIC"],
    deps = [yoga_dep(":yoga")],
)

yoga_apple_binary()
