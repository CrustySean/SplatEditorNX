<brls:Box
    width="auto"
    height="auto">

    <brls:ScrollingFrame
        width="auto"
        height="auto"
        axis="column"
        alignItems="stretch"
        grow="1.0" >
        
        <brls:Box
            width="10000"
            height="auto"
            axis="column"
            alignItems="stretch"
            paddingTop="@style/brls/sidebar/padding_top"
            paddingRight="@style/brls/sidebar/padding_right"
            paddingBottom="@style/brls/sidebar/padding_bottom"
            paddingLeft="@style/brls/sidebar/padding_left">

            <brls:Header
                title= "Save Option" />

            <brls:RadioCell
                id="inject_save" />

            <brls:Header
                title= "Debug"
                paddingTop="60" />

            <brls:RadioCell
                id="dbgInAppLog" />

            <brls:RadioCell
                id="dbgWireFrame" />

        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>
