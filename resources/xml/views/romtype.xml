<brls:Box
    width="auto"
    height="auto">

    <brls:AppletFrame
        id="applet"
        width="100%"
        height="auto"
        backgroundColor="@theme/brls/background">

        <brls:ScrollingFrame
            width="auto"
            height="auto"
            axis="column"
            scrollingBehavior="centered"
            alignItems="stretch"
            grow="1.0" >

            <brls:Box
                id="container"
                width="10000"
                height="auto"
                axis="column"
                alignItems="stretch"
                paddingTop="@style/brls/sidebar/padding_top"
                paddingRight="@style/brls/sidebar/padding_left"
                paddingBottom="@style/brls/sidebar/padding_bottom"
                paddingLeft="@style/brls/sidebar/padding_left" />

        </brls:ScrollingFrame>
    
    </brls:AppletFrame>

</brls:Box>